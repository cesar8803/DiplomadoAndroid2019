<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragment.InitialSectionFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "@string/textinitialquestion"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "@string/texttypepromotion"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/container"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:gravity="center_horizontal"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/container"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_centerInParent="true">


                  <Button
                          android:layout_width="100dp"
                          android:layout_height="100dp"
                          android:id="@+id/online"
                          android:textSize="14sp"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:layout_margin="10dp"
                          android:text="Oferta en linea"/>

                    <Button
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/physical"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="Oferta en tienda fÃ­sica"/>

    </LinearLayout>

</RelativeLayout>